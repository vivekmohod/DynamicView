    <style name="edit_text_style" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/text_field</item>
        <item name="android:textColorHint">@color/hint_gray_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp12</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:typeface">monospace</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/dp8</item>
    </style>

    <style name="text_view_h1_style" parent="@android:style/TextAppearance">
